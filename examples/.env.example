# MCP Platform Environment Configuration Example
# Copy this file to .env and update the values for your environment

# Environment Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security Settings (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
API_KEY_SECRET=your-api-key-secret-change-in-production

# Database Configuration
DATABASE_URL=postgresql://mcp_user:mcp_password@postgres:5432/mcp_platform
POSTGRES_PASSWORD=mcp_password

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_password

# Framework Settings
HAYSTACK_ENABLED=true
LLAMAINDEX_ENABLED=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
GRAFANA_PASSWORD=admin

# External API Keys (Optional)
# OPENAI_API_KEY=your-openai-api-key
# HUGGING_FACE_API_TOKEN=your-hugging-face-token

# Integration Settings (Optional)
# SLACK_BOT_TOKEN=your-slack-bot-token
# GITHUB_TOKEN=your-github-token
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Performance Tuning
# UVICORN_WORKERS=4
# MAX_CONCURRENT_REQUESTS=100
# REQUEST_TIMEOUT=300

# Storage Settings
DATA_DIR=/app/data
LOG_DIR=/app/logs
