[autopep8]
# Configuration file for autopep8
# This file configures autopep8 settings for the Wand project

# Maximum line length (PEP 8 recommends 79, but 120 is common for modern displays)
max_line_length = 120

# Number of spaces per indentation level
indent_size = 4

# Aggressiveness level (0-2, higher = more aggressive changes)
# Using 2 for maximum code standardization
aggressive = 2

# Errors to ignore
# E501: Line too long (handled by max_line_length)
# W503: Line break before binary operator (PEP 8 now recommends line break before operator)
# E203: Whitespace before ':' (conflicts with black formatter)
ignore = E501,W503,E203

# Enable experimental fixes (use with caution)
experimental = False

# Don't create backup files
in-place = True

# Exclude paths (directories and files to skip)
exclude = .git,__pycache__,venv,.venv,migrations,generated,protos,*.egg-info,build,dist

# Additional pep8 passes
# More passes = more thorough formatting but slower
pep8_passes = 2000

# Hang closing brackets on the same line
hang_closing = False

