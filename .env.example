# Wand MCP Server Environment Variables
# Copy this file to .env and update with your configuration

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_API_URL=http://localhost:11434/v1
OLLAMA_DEFAULT_MODEL=qwen3:30b-a3b-instruct-2507-q4_K_M
OLLAMA_TIMEOUT=43200
OLLAMA_CLIENT_TIMEOUT=43200
OLLAMA_HEALTH_TIMEOUT=30
OLLAMA_PULL_TIMEOUT=3600

# Server Configuration
MCP_HTTP_PORT=8001
MCP_LOG_LEVEL=INFO
MCP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgres://mcp:changeme@localhost/mcp?sslmode=disable
DATABASE_MAX_CONNECTIONS=10
DATABASE_MAX_IDLE_CONNS=5
DATABASE_CONN_MAX_LIFETIME=3600

# Security Configuration
JWT_SECRET=change-this-secret-key-in-production
ENABLE_AUTH=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT=100
TOKEN_EXPIRY=3600

# MCP Tool Timeouts
BASH_DEFAULT_TIMEOUT_MS=43200000
BASH_MAX_TIMEOUT_MS=43200000
MCP_TIMEOUT=43200000
MCP_TOOL_TIMEOUT=43200000

# Execution Configuration
EXECUTION_MODE=native
EXECUTION_DEFAULT_TIMEOUT=60
EXECUTION_MAX_CONCURRENT=20
EXECUTION_WORKING_DIRECTORY=/workspace
EXECUTION_AUDIT_LOGGING=true

# Integration API Keys (Add your own)
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# COHERE_API_KEY=your-cohere-api-key-here
# HUGGINGFACE_API_KEY=your-huggingface-api-key-here
# SLACK_BOT_TOKEN=your-slack-bot-token-here
# SLACK_APP_TOKEN=your-slack-app-token-here
# GITHUB_TOKEN=your-github-token-here
# GITLAB_TOKEN=your-gitlab-token-here
# AWS_ACCESS_KEY_ID=your-aws-access-key-here
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
# AWS_REGION=us-east-1

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_ENDPOINT=/metrics
MONITORING_COLLECT_INTERVAL=15
MONITORING_RETENTION_DAYS=7

# Distributed System Configuration
DISTRIBUTED_MAX_CONCURRENT_TASKS=10
DISTRIBUTED_TASK_QUEUE_SIZE=200
DISTRIBUTED_MESSAGE_QUEUE_SIZE=200
DISTRIBUTED_WORKER_POOL_SIZE=20
DISTRIBUTED_HEARTBEAT_INTERVAL=30
DISTRIBUTED_TASK_TIMEOUT=600
