{
  "server": {
    "http_port": "8080",
    "metrics_port": "9090",
    "log_level": "info",
    "version": "1.0.0"
  },
  "database": {
    "url": "postgres://mcp:mcp-password@localhost/mcp?sslmode=disable",
    "max_connections": 10,
    "max_idle_conns": 5,
    "conn_max_lifetime": 3600
  },
  "security": {
    "enable_auth": true,
    "jwt_secret": "your-secret-key",
    "enable_rate_limit": true,
    "rate_limit": 100,
    "token_expiry": 3600
  },
  "integrations": {
    "slack": {
      "enabled": false,
      "bot_token": "",
      "app_token": "",
      "default_channel": "#general"
    },
    "git": {
      "enabled": false,
      "github_token": "",
      "gitlab_token": "",
      "default_branch": "main",
      "commit_author": "MCP Bot",
      "commit_email": "mcp-bot@example.com"
    },
    "jenkins": {
      "enabled": false,
      "url": "",
      "username": "",
      "token": "",
      "default_pipeline": "build"
    },
    "youtrack": {
      "enabled": false,
      "url": "",
      "token": "",
      "default_project": ""
    },
    "aws": {
      "enabled": false,
      "region": "us-east-1",
      "access_key_id": "",
      "secret_access_key": "",
      "default_bucket": ""
    },
    "postgres": {
      "enabled": false,
      "host": "localhost",
      "port": 5432,
      "database": "mcp_data",
      "username": "mcp",
      "password": "",
      "ssl_mode": "disable"
    },
    "bambu": {
      "enabled": false,
      "api_key": "",
      "base_url": "https://api.bambulab.com",
      "printers": {}
    },
    "web": {
      "enabled": false,
      "search_api_key": "",
      "proxy_url": "",
      "timeout": 30
    }
  },
  "monitoring": {
    "enabled": true,
    "prometheus_endpoint": "/metrics",
    "collect_interval": 15,
    "retention_days": 7
  },
  "distributed": {
    "max_concurrent_tasks": 5,
    "task_queue_size": 100,
    "message_queue_size": 100,
    "worker_pool_size": 10,
    "heartbeat_interval": 30,
    "task_timeout": 300
  }
}